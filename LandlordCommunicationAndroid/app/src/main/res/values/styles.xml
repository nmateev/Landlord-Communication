<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="material_drawer_primary_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_secondary_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_divider">@color/colorPrimaryDark</item>
        <item name="material_drawer_selected_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_header_selection_text">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindow</item>

        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>

    </style>

    <style name="EditTextLoginStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#641D79</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColorHint">#641D79</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="MaterialEditTextStyle">
        <item name="android:textColor">#641D79</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#641D79</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="mtf_cardCollapsedHeight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="mtf_labelColor">#641D79</item>
        <item name="mtf_openKeyboardOnFocus">true</item>
    </style>

    <style name="MaterialEditTextSearchStyle">
        <item name="android:textColor">#641D79</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#641D79</item>
        <item name="mtf_cardCollapsedHeight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="mtf_labelColor">#641D79</item>
        <item name="mtf_openKeyboardOnFocus">false</item>
    </style>


    <style name="SpinnerStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#641D79</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#641D79</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
